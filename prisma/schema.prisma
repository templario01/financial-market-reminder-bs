generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Quote {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  ticker        String   @unique
  currentPrice  Float
  change        Float
  percentChange Float
  high          Float
  low           Float
  open          Float
  previousClose Float
  lastUpdated   DateTime @default(now())
}
